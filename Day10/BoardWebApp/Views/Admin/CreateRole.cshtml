@model BoardWebApp.Models.CreateRoleModel

@{
	ViewData["Title"] = "Create New Role";
}

<h1>User Registration</h1>

<div class="container">
	<div class="row">
		<div class="col">
			<form method="post" asp-action="CreateRole" asp-controller="Admin">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="RoleName"></label>
					<input asp-for="RoleName" class="form-control" />
					<span asp-validation-for="RoleName" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-primary btn-sm">롤생성</button>
				<a asp-action="ListRoles" asp-controller="Admin" class="btn btn-secondary btn-sm">목록</a>
			</form>
		</div>
	</div>
</div>