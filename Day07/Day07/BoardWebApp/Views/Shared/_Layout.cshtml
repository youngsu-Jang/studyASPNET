@* 회원가입, 로그인 화면표시 위해 추가하는 객체 *@

<!DOCTYPE html>
<html lang="ko">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="=" small business 템플릿 적용" />
	<title>@ViewData["Title"] - 게시판웹</title>
	<link rel="icon" type="image/x-icon" href="~/assets/favion.ico" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
	<link rel="stylesheet" href="~/BoardWebApp.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<body>
	<!-- Responsive navbar-->
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container px-5">
			<a class="navbar-brand" href="#!">Start Bootstrap</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
					<a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">홈</a>
					<li class="nav-item"><a class="nav-link" href="#!">소개</a></li>
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="" asp-controller="Note" asp-action="Index">게시판</a>
					</li>
					<li class="nav-item">
						@if (signInManager.IsSignedIn(User))
				{
					<form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
						<ul class="nav navbar-nav">
							<li class="nav-item">
								안녕하세요, @userManager.GetUserName(User)!&nbsp;
							</li>
							<li>
								<button type="submit" class="btn btn-secondary btn-sm"><span class="bg-info bi-box-arrow-right"></span></button>
							</li>
						</ul>
					</form>
				}
				else
				{
					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">계정</a>
							<div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown04">
								<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">로그인</a>
								<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">회원가입</a>
							</div>
						</li>
					</ul>
				}
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Page Content-->
	<div class="container px-4 px-lg-5">
		@RenderBody()
	</div>

	<!-- Footer-->
	<footer class="footer py-5 bg-dark custom-footer">
		<div class="container px-4 px-lg-5">
			<p class="m-0 text-center text-white">
				<a href="http://github.com/youngsu-Jang" target="_blank">Copyright</a> &copy;
				<a class="text-decoration-none"></a> youngsu-Jang 2023
			</p>
		</div>
	</footer>
	<!-- jquery 이하의 js는 모두 body맨 마지막에 넣어야합니다 필수!!-->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/trumbowyg/trumbowyg.min.js"></script>
	<script src="~/lib/trumbowyg/langs/ko.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
